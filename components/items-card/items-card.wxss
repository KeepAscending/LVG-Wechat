/* components/items-card/items-card.wxss */
.items-card{
  position: relative;
  margin-bottom: 40rpx;
}

.items-card image{
  border-radius: 6rpx;
  width: 100%;
  height: 230rpx;
}

.items-card .overview{
  color: dimgray;
  font-size: 22rpx;
}

.items-card .title{
  font-size: 26rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  /* 显示两行就隐藏*/
  display: -webkit-box;
  -webkit-line-clamp: 2; 
  -webkit-box-orient: vertical;
}

.items-card .price .p0{
  color: red;
  font-size: 30rpx;
  font-weight: bold;
}

.items-card .price .p1{
  color: gray;
  font-size: 24rpx;
}

.items-card .collect{
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  z-index: 10; 
}

.items-card .collect image{
  width: 50rpx;
  height: 50rpx;
}

.items-card .eval{
  padding: 10rpx 0;
  line-height: 10rpx;
  white-space: nowrap;
}

.items-card .eval image{
  width: 20rpx;
  height: 20rpx;
}

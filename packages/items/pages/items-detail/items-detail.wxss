/* packages/items/pages/items-detail/items-detail.wxss */
page{
  padding-bottom: 170rpx;
}

/* 轮播图*/
.detailBan{
  position: relative;
  margin-bottom: 40rpx;
}

.detailBan .swiper,image{
  width: 100%;
  height: 450rpx;
}

/* 收藏与分享 */
.item-btns{
  position: absolute;
  bottom: -38rpx;
  right: 36rpx;
  z-index: 10;
}

.item-btns .item-collect,
.item-share{
  display: inline-block;
  vertical-align: middle;
  padding: 20rpx;
  background-color: white;
  border-radius: 50%;
  box-shadow: 0 1rpx 10rpx grey;
}

.item-btns image{
  display: block;
  width: 50rpx;
  height: 50rpx;
}

.item-collect{
  margin-right: 32rpx;
}


.item-share button{
  border: none;
  background-color: transparent;
  padding: 0;
  margin: 0;
  line-height: normal;
}

.item-share button::after{
  border: none;
}

/* 预定日期 */
.item-bookDate{
  width: 85%;
  margin: 0 auto;
  padding: 20rpx 0;
  font-size: 24rpx;
  border-bottom: 1rpx solid rgb(230, 230, 230);
}

.item-bookDate text{
  color: dimgray;
}

.item-bookDate .option-date{
  padding-left: 20rpx;
  display: inline-block;
  color:  rgb(0, 132, 137);
}

/* 房源信息 */
.item-detail{
  width: 85%;
  margin: 40rpx auto;
}

.item-detail view{
  margin: 10rpx 0;
}

.item-detail .cate{
  color: cornflowerblue;
  font-size: 20rpx;
}

.item-detail .title{
  font-size: 30rpx;
  font-weight: bold;
}

.item-detail .params{
  color: dimgray;
  font-size: 26rpx;
}

.item-detail .tips{
  margin: 30rpx 0;
  padding: 30rpx;
  border: 1rpx solid lightcyan;
  border-radius: 20rpx;
  background-color: rgb(221, 247, 243);
  font-size: 24rpx;
}

.item-detail .tips .tips-1, .tips-2{
  display: -webkit-flex;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.item-detail .tips image{
  width: 50rpx;
  height: 50rpx;
}

.item-detail .tips .span{
  padding: 0 20rpx;
}

.item-detail .tips .tips-1 .p{
  color:  rgb(0, 132, 137);
  white-space: nowrap;
}

.item-detail .beds{
  white-space: nowrap;
}

.item-detail .beds ::-webkit-scrollbar{ /* 隐藏滚动条 */
  width: 0;
  height: 0;
  color: transparent;
}

.item-detail .beds .single{
  display: inline-block;
  width: 36%;
  padding: 20rpx;
  margin: 0 30rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgb(230, 230, 230);
}
.item-detail .beds :first-child{
  margin-left: 0;
}

.item-detail .beds .iconfont{
  font-size: 50rpx;
}

.item-detail .beds .h4{
  font-size: 20rpx;
  font-weight: bold;
}

.item-detail .beds .span{
  font-size: 24rpx;
}

.item-detail .introduce{
  font-size: 26rpx;
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgb(230, 230, 230);
}

.item-detail .introduce .intro-content{
  overflow: hidden;
  text-overflow: ellipsis;
  /* 显示两行就隐藏*/
  display: -webkit-box;
  -webkit-line-clamp: 2; 
  -webkit-box-orient: vertical;
}

.item-detail .introduce .intro-more{
  color:  rgb(0, 132, 137);
}

.item-detail .facilities{
  display: -webkit-flex;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 24rpx;
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgb(230, 230, 230);
}

.item-detail .facilities .faci-icon .iconfont{
  text-align: center;
  font-size: 50rpx;
}

.item-detail .facilities .faci-icon .span{
  text-align: center;
}

.item-detail .facilities .faci-more{
  font-weight: bold;
  color:  rgb(0, 132, 137);
}

.item-detail .adress{
  font-size: 26rpx;
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgb(230, 230, 230);
}

.item-detail .adress :nth-child(1){
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.item-detail .adress :nth-child(2){
  font-weight: bold;
}

/* modal */
.modal{
  width: 100%;
  height: 60%;
  border-radius: 20rpx;
  background-color: white;
  border: 1rpx solid rgb(230, 230, 230);
}

.modal .modal-content{
  width: 85%;
  height: 100%;
  margin: 0 auto;

}

.modal .modal-content .modal-content-title{
  height: 15%;
  overflow: hidden;
}

.modal .modal-content .modal-content-title view{
  margin: 40rpx 0;
  font-size: 32rpx;
  font-weight: bold;
}

.modal .modal-content .modal-content-detail{
  font-size: 26rpx;
  height: 85%;
}

.modal .modal-content .modal-content-detail ::-webkit-scrollbar{ /* 隐藏滚动条 */
  width: 0;
  height: 0;
  color: transparent;
}

.modal .modal-content .modal-content-detail .h4{
  font-weight: bold;
  padding: 30rpx 0;
}

.modal .modal-content .modal-content-detail .icon-contain{
  margin-bottom: 70rpx;
}

.modal .modal-content .faci-icon{
  display: inline-block;
  width: 25%;
  text-align: center;
  margin: 20rpx 0;
}

.modal .modal-content .faci-icon .iconfont{
  font-size: 50rpx;
}

/* 页脚 */
.footer{
  width: 100%;
  height: 160rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 99;
  border-top: 1rpx solid lightgray;
  background-color: #ffff;
  display: -webkit-flex;
  display: flex;
  align-items: center;
}

.footer .footer-content{
  width: 85%;
  margin: 0 auto;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer .footer-content .focon-detail .price .p0{
  color: red;
  font-size: 30rpx;
  font-weight: bold;
}

.footer .footer-content .focon-detail .p2{
  font-size: 24rpx;
}

.footer .footer-content .focon-detail .eval{
  padding: 10rpx 0;
  line-height: 10rpx;
  white-space: nowrap;
}

.footer .footer-content .focon-detail .eval image{
  width: 20rpx;
  height: 20rpx;
}

.footer .footer-content .focon-btn{
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  background-color: red;
  padding: 20rpx 40rpx;
  text-align: center;
  border-radius: 10rpx;
}



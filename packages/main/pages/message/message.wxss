/* packages/main/pages/message/message.wxss */
page{
  margin-bottom: 160rpx;
}

.container{
  font-size: 26rpx;
}

.title{
  width: 85%;
  margin: 40rpx auto;
}

.title :nth-child(1){
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.title image{
  display: block;
  width: 500rpx;
  margin: 30rpx auto;
}

.title .more{
  width: 100%;
  height: 80rpx;
  border: 2rpx solid rgb(0, 132, 137);
  border-radius: 6rpx;
  margin-top: 20rpx;
  text-align: center;
  line-height: 80rpx;
  color: rgb(0, 132, 137);
  font-size: 30rpx;
  font-weight: bold;
}

.title .more-active{
  background-color: rgb(218, 249, 250);
}
/* packages/calendar/pages/index/index.wxss */
.flexbox{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
}
.flex1{
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
.flex2{
  -webkit-box-flex: 2;
  -webkit-flex: 2;
  flex: 2;
}
.disabled {
  pointer-events: none;
  cursor: default;
  opacity: 0.6;
  color: rgb(153, 153, 153);
}
.flexs{
  justify-content: flex-start;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
}
.flexLi{
  -webkit-box-flex: 0 0 49%;
  -webkit-flex: 0 0 49%;
  flex: 0 0 49%;
}
.myRili{
  padding-top: 300rpx;
}
.myRLTitle{
  position: fixed;
  top:0;
  left: 0;
  width: 100%;
  z-index: 999;
  background-color: white;
  border-bottom: 1px solid rgb(230,230,230);
  padding: 40rpx 0rpx 20rpx;
}
.myRLTInfo{
  text-align: center;
  font-size: 32rpx;
  height: 96rpx;
}
.myRLT_Time text{
  display: block;
}
.myRLT_Time text:first-of-type{
  font-size: 34rpx;
  color: rgb(0, 132, 137);
  padding-top: 10rpx;
}
.myRLT_Time text:nth-of-type(2){
  display: none;
}
.myRLT_Time.active text:first-of-type{
  font-size: 24rpx;
  color: black;
  padding-top: 0rpx;
}
.myRLT_Time.active text:nth-of-type(2){
  font-size: 36rpx;
  color: rgb(0, 132, 137);
  margin-top: 16rpx;
  display: block;
}
.myRLT_res{
  padding-top: 10rpx;
}
.myRLT_res.active{
  padding-top: 20rpx;
}
.RLTitle{
  text-align: center;
  font-size: 32rpx;
  margin-top: 30rpx;
}
.RLTitl{
  font-size: 48rpx;
  margin-top: 40rpx;
  padding: 0rpx 32rpx;
  margin-bottom: 20rpx;
}
.RLList{
  text-align: center;
}
.RLList >view{
  -webkit-box-flex: 0 0 14.28%;
  -webkit-flex: 0 0 14.28%;
  flex: 0 0 14.28%;
  margin-bottom: 20rpx;
}
.RLList >view text{
  width: 70rpx;
  height: 70rpx;
  line-height: 68rpx;
  border-radius: 50%;
  border: 2rpx solid transparent;
  display: block;
  text-align: center;
  font-size: 24rpx;
  margin: 0 auto;
}
.RLList >view.curActive text{
  border: 2rpx solid rgb(230,230,230);
}
.RLList >view.select text{
  border-color: rgb(0, 132, 137);
  background-color: rgb(0, 132, 137);
  color: white;
}
.myRL_list{
  padding-bottom: 180rpx;
}
.RLBox{
  margin-bottom: 80rpx;
}
.RLBox:last-of-type{
  margin-bottom: 0;
}
.myRLFooter{
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  padding: 20rpx 32rpx;
  border-top: 2rpx solid rgb(230,230,230);
  z-index: 999;
  background-color: white;
  box-sizing: border-box;
  font-size: 32rpx;
}
.clearfix:after{
	content: ' ';
	display: block;
	clear: both;
	visibility:hidden;
	line-height: 0;
	height:0;
}
.myRLFooter view:first-of-type{
  display: inline-block;
  transform: translateY(16rpx);
}
.myRLFooter view:nth-of-type(2){
  float: right;
  color: white;
  padding: 20rpx 60rpx;
  border-radius: 8rpx;
}
.activeBg{
  background-color: rgb(0, 132, 137);
}
.isBooks{
  pointer-events: none;
  cursor: default;
  opacity: 0.6;
  color: rgb(153, 153, 153);
}
.RLList >view.isBooks text{
  text-decoration-line: line-through;
}

.RLList >view.unable{
  pointer-events: none;
  cursor: default;
}
/* packages/landlordMode/houseRes/pages/newRes/newRes.wxss */
page{
  padding-bottom: 160rpx;
}

.container{
  width: 85%;
  margin: 0 auto;
  font-size: 26rpx;
}

.container >view{
  border-bottom: 1rpx solid rgb(230, 230, 230);
  padding-bottom: 40rpx;
  margin-bottom: 40rpx;
}

.h2{
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.span{
  font-size: 30rpx;
  margin: 10rpx 0;
}

.input{
  color: rgb(0, 132, 137);
  font-size: 30rpx;
}

.restype >view{
  display: inline-block;
  width: 27%;
  text-align: center;
  margin: 20rpx 20rpx 0 0;
  padding: 16rpx 10rpx;
  background-color: rgb(240, 240, 240);
  border: 1rpx solid rgb(240, 240, 240);
  border-radius: 6rpx;
}

.restype >view.active{
  color: rgb(0, 132, 137);
  border-color: rgb(0, 132, 137);
  background-color: unset;
}

.textarea{
  height: 200rpx;
  width: 100%;
  font-size: 30rpx;
  color: rgb(0, 132, 137);
}

.content .words{
  margin-right: 20rpx;
  margin-top: 20rpx;
  text-align: right;
  color: gray;
}

.uploadWrap >view{
  border-radius: 10rpx;
  vertical-align: top;
  display: inline-block;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.uploadWrap .upload{
  width: 140rpx;
  padding: 15rpx 0;
  text-align: center;
  background-color: rgb(240, 240, 240);
}

.uploadWrap .upload image{
  width: 50rpx;
  height: 50rpx;
}

.uploadWrap .upload .span{
  font-size: 24rpx;
  color: gray;
}

.uploadWrap .preview{
  position: relative;
  overflow: hidden;
  width: 140rpx;
  height: 140rpx;
}

.uploadWrap .preview image{
  width: 140rpx;
  height: 140rpx;
}

.uploadWrap .preview .icon-guanbi1{
  position: absolute;
  top: 6rpx;
  left: 6rpx;
  z-index: 99;
  background-color: rgba(0, 0, 0, 0.3);
  width: 36rpx;
  height: 36rpx;
  text-align: center;
  line-height: 36rpx;
  border-radius: 50%;
  font-size: 30rpx;
  color: #ffffff;
}

.footer{
  position: fixed;
  z-index: 9;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #ffffff;
  border-top: 1rpx solid rgb(230, 230, 230);
}

.footer .footer-btn{
  width: 85%;
  background-color: rgb(0, 132, 137);
  margin: 30rpx auto;
  text-align: center;
  padding: 20rpx 0;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 6rpx;
}

.modal-main{
  width: 100%;
  height: 60%;
  border-radius: 20rpx;
  background-color: white;
  border: 1rpx solid rgb(230, 230, 230);
}

.modal-main .modal-content{
  width: 85%;
  height: 100%;
  margin: 40rpx auto;
}

.modal-main .modal-content .scroll{
  height: 90%;
  width: 100%;
}

.modal-main .modal-content .scroll ::-webkit-scrollbar{ /* 隐藏滚动条 */
  width: 0;
  height: 0;
  color: transparent;
}

.modal-main .modal-content .scroll .scroll-text{
  font-size: 30rpx;
  color: rgb(0, 132, 137);
  margin: 20rpx;
}
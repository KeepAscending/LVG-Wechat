/* packages/landlordMode/item/pages/showItem/showItem.wxss */
page{
  padding-top: 270rpx;
}

.container{
  width: 85%;
  margin: 0 auto;
  font-size: 26rpx;
}

.hover{
  opacity: 0.6;
}

.h2{
  color: rgb(0, 132, 137);
  font-size: 30rpx;
  font-weight: bold;
}

.flex{
  display: -webkit-flex;
  display: flex;
}

.flex2{
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.text{
  color: rgb(0, 132, 137);
}

.group{
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99;
  width: 100%;
  background-color: #ffffff;
  border-bottom: 1rpx solid rgb(240, 240, 240);
  padding-bottom: 40rpx;
  margin-bottom: 40rpx;
  font-size: 26rpx;
}

.group .group-card{
  width: 85%;
  margin: 0 auto;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
}

.group .group-card{
  margin-top: 40rpx;
}

.group .group-card image{
  width: 40%;
  height: 140rpx;
}
.group .group-card >view{
  width: 30%;
}

.group .group-card >view view{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 10rpx;
}

.new{
  width: 85%;
  margin: 0 auto;
  margin-top: 20rpx;
  color: rgb(0, 132, 137);
  font-weight: bold;
}

.new >view{
  display: inline-block;
}

.new .icon-jia1{
  margin-right: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: rgb(0, 132, 137);
}

/* 房型 */
.items-card{
  position: relative;
  margin: 60rpx 0;
}

.items-card .swiper{
  height: 300rpx;
  overflow: hidden;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.items-card .swiper .wx-swiper-dot{ /* 默认指示点的样式 */
  width: 15rpx;
  height: 15rpx;
  background-color: lightgray;
}   

.items-card .swiper .wx-swiper-dot-active{ /* 选中指示点的样式 */
  background-color: white;
}

.items-card .swiper image{
  width: 100%;
  height: 300rpx;
}

.items-card .title{
  width: 50%;
  font-size: 26rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 20rpx;
}

.items-card .price .p0{
  color: red;
  font-size: 26rpx;
  font-weight: bold;
}

.items-card .price .p1{
  color: gray;
  font-size: 24rpx;
}

.items-card .eval{
  position: absolute;
  top: 230rpx;
  left: 30rpx;
  z-index: 10;
  padding: 10rpx 17rpx;
  line-height: 10rpx;
  white-space: nowrap;
  background-color: rgba(255, 255, 255, .6);
  border-radius: 100rpx;
}

.items-card .eval image{
  width: 20rpx;
  height: 20rpx;
}


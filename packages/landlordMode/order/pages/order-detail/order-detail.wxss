/* packages/landlordMode/order/pages/order-detail/order-detail.wxss */
page{
  padding-bottom: 100rpx;
}

.hover{
  opacity: 0.6;
}

.header, .header image{
  width: 100%;
  height: 300rpx;
}

.header >view{
  position: absolute;
  width: 95%;
  border-radius: 20rpx;
  top: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
  margin-top: 45rpx;
  padding: 40rpx 0;
  font-size: 26rpx;
  background-color: white;
}

.header >view >view{
  padding: 5rpx 40rpx;
}

.header >view .h4{
  font-size: 30rpx;
  font-weight: bold;
}

.header .flex{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  line-height: 30rpx;
}

.header .eval image{
  width: 30rpx;
  height: 30rpx;
}

.container{
  width: 85%;
  margin: 0 auto;
  font-size: 26rpx;
}

.container .h2{
  width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.item{
  margin-top: 40rpx;
  padding: 40rpx 30rpx;
  background-color: rgb(240, 240, 240);
  border-radius: 10rpx;
  align-items: center;
}

.price-info, .consumer-info, .order-info{
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgb(230, 230, 230);
}

.item-info, .price-info >view, .consumer-info >view, .order-info >view{
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-info >view, .consumer-info >view, .order-info >view{
  margin: 10rpx 0;
}

.item .item-info image{
  width: 160rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

.item .book-date{
  color: rgb(0, 132, 137);
}

.price-info :nth-child(6){
  font-weight: bold;
}

.price-info :nth-child(6) :nth-child(2){
  color: red;
}

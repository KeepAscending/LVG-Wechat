/* packages/order/pages/order-eval/order-eval.wxss */
.container{
  width: 85%;
  margin: 0 auto;
  font-size: 28rpx;
}

.h4{
  font-weight: bold;
}

.evalWrap{
  display: flex;
  display: -webkit-flex;
  line-height: 55rpx;
  margin: 40rpx 0;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid rgb(240, 240, 240);
}

.evalWrap .h4{
  font-size: 30rpx;
  margin-right: 40rpx;
}

.evalWrap .span{
  margin-left: 20rpx;
  color: gray;
  font-size: 26rpx;
}

.evalWrap .eval{
  margin-right: 10rpx;
}

.evalWrap .eval image{
  width: 50rpx;
  height: 50rpx;
}

.content{
  margin-bottom: 20rpx;
}

.content .textarea{
  height: 300rpx;
  width: 100%;
  font-size: 30rpx;
}

.content .words{
  margin-right: 20rpx;
  margin-top: 20rpx;
  text-align: right;
  color: gray;
}

.uploadWrap{
  margin-bottom: 40rpx;
  padding-bottom: 40rpx;
  border-bottom: 1rpx solid rgb(240, 240, 240);
}

.uploadWrap >view{
  border-radius: 10rpx;
  vertical-align: top;
  display: inline-block;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.uploadWrap .upload{
  width: 140rpx;
  padding: 15rpx 0;
  text-align: center;
  background-color: rgb(240, 240, 240);
}

.uploadWrap .upload image{
  width: 50rpx;
  height: 50rpx;
}

.uploadWrap .upload .span{
  font-size: 24rpx;
  color: gray;
}

.uploadWrap .preview{
  position: relative;
  overflow: hidden;
  width: 140rpx;
  height: 140rpx;
}

.uploadWrap .preview image, video{
  width: 140rpx;
  height: 140rpx;
}

.uploadWrap .preview .icon-guanbi1{
  position: absolute;
  top: 6rpx;
  left: 6rpx;
  z-index: 99;
  background-color: rgba(0, 0, 0, 0.3);
  width: 36rpx;
  height: 36rpx;
  text-align: center;
  line-height: 36rpx;
  border-radius: 50%;
  font-size: 30rpx;
  color: #ffffff;
}

.container .btn{
  width: 100%;
  border: 1rpx solid rgb(230, 230, 230);
  border-radius: 10rpx;
  padding: 20rpx 0;
  margin: 40rpx 0;
  text-align: center;
}

.container .btn.hover{
  opacity: 0.6;
}
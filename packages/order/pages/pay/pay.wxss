/* packages/order/pages/pay/pay.wxss */

.container{
  width: 85%;
  margin: 0 auto;
  font-size: 26rpx;
}

.item{
  margin-top: 40rpx;
  padding: 40rpx 30rpx;
  background-color: rgb(240, 240, 240);
  border-radius: 10rpx;
  align-items: center;
}

.consumer-info, .price-info{
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgb(230, 230, 230);
}

.item-info, .price-info >view, .consumer-info >view{
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.container .h2{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: bold;
  margin-bottom: 30rpx;
}


.item .item-info .detail{
  width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item .item-info image{
  width: 160rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

.item .book-date{
  color: rgb(0, 132, 137);
}

.consumer-info .input{
  text-align: right;
}

.price-info >view{
  margin: 10rpx 0;
}

.price-info :nth-child(3) :nth-child(2){
  color: red;
}

.price-info :nth-child(4) :nth-child(2){
  color: red;
}

.price-info :nth-child(6){
  font-weight: bold;
}

/* 页脚 */
.footer{
  width: 100%;
  height: 160rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 99;
  border-top: 1rpx solid lightgray;
  background-color: #ffff;
  display: -webkit-flex;
  display: flex;
  align-items: center;
}

.footer .footer-content{
  width: 85%;
  margin: 0 auto;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer .footer-content .focon-btn{
  width: 40%;
  font-size: 30rpx;
  font-weight: bold;
  color: white;
  background-color: rgb(0, 132, 137);
  padding: 20rpx 40rpx;
  text-align: center;
  border-radius: 10rpx;
}